<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

    <org.sagemath.droid.ui.CodeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/codeView">
    </org.sagemath.droid.ui.CodeView>

    <ToggleButton
            android:layout_width="wrap_content"
            android:id="@+id/codeViewStateToggleButton"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textOn="@string/fa_collapse"
            android:textOff="@string/fa_expand"
            android:gravity="right|top"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@drawable/toggle_selector"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@android:color/transparent"
            android:contentDescription="Expand/Collapse Editor"
            android:layout_alignParentRight="true"/>

</RelativeLayout>